{% comment %}
  @param id {String}
    A unique ID for the link, used as a classname and to look up the icon.

  @param url {String}
    The URL to link to.

  @param title String {Optional}
    A user-facing name for the social platform.
{% endcomment %}

<a
  class="social-link"
  {% if title != blank %}title="{{ title | escape }}"{% endif %}
  href="{{ url | escape }}"
  target="_blank">
  {%-
    include 'social-icon',
    id: id
  -%}
  <span class="show-for-sr">{{ 'general.accessibility.social_media_icon' | t: platform: title | escape }}</span>
</a>
